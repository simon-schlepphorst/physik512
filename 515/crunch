import json
import os.path
import sys
import pprint

import matplotlib.pyplot as pl
import matplotlib.colors
import numpy as np
import scipy.misc
import scipy.ndimage.filters
import scipy.optimize as op
import scipy.stats
import scipy.integrate
import scipy.interpolate
import unitprint


def bins(array):
    return max(array) - min(array) + 1


def filter_hits(events, tot_min):
    new_events = []
    for event in events:
        new_event = list(zip(*[(wire, time, tot) for wire, time, tot in zip(*event) if tot >= tot_min]))

        #print(new_event)

        if len(new_event) > 0:
            new_events.append(new_event)

    return new_events


def load_data(filename):
    with open(filename) as f:
        data = json.load(f)

    return data


def wire_le_hist(events, outfile, title):
    fig = pl.figure()
    ax = fig.add_subplot(1, 1, 1)

    wire_le_hist_into_axes(events, ax)

    ax.set_xlabel('Drahtnummer')
    ax.set_ylabel('Anzahl Events')
    ax.set_title(title)

    fig.savefig(outfile)


def wire_le_hist_into_axes(events, ax):
    all_wire_le = []

    for event in events:
        wire_le = event[0]

        for x in wire_le:
            all_wire_le.append(x)

    bins = max(all_wire_le) - min(all_wire_le) + 1
    ax.hist(all_wire_le, bins=bins)


def time_le_hist_into_axes(events, ax, label):
    all_time_le = []

    for event in events:
        time_le = event[1]

        for x in time_le:
            all_time_le.append(x)

    dummy = pl.figure()
    dummy_ax = dummy.add_subplot(1, 1, 1)

    bins = max(all_time_le) - min(all_time_le) + 1

    y, x, patches = dummy_ax.hist(all_time_le, bins=bins)
    new_x = (x[1:] + x[:-1])/2
    ax.plot(new_x * 2.5, y, label=label)


def time_le_hist_into_axes_2(events, ax):
    all_time_le = []

    for event in events:
        time_le = event[1]

        for x in time_le:
            all_time_le.append(x)

    dummy = pl.figure()
    dummy_ax = dummy.add_subplot(1, 1, 1)

    bins = max(all_time_le) - min(all_time_le) + 1

    y, x, patches = dummy_ax.hist(all_time_le, bins=bins)
    new_x = (x[1:] + x[:-1])/2
    ax.plot(new_x * 2.5, y, label='...')


def time_le_hist_cdf(events, outfile, title):
    all_time_le = []
    for event in events:
        time_le = event[1]
        for x in time_le:
            all_time_le.append(x * 2.5)
    dummy = pl.figure()
    dummy_ax = dummy.add_subplot(1, 1, 1)
    bins = max(all_time_le) - min(all_time_le) + 1
    y, x, patches = dummy_ax.hist(all_time_le, bins=bins)
    #x = (x[1:] + x[:-1])/2
    x = x[:-1]

    y_integrated = scipy.integrate.cumtrapz(y, x, initial=0)

    y_integrated *= 8.5 / np.max(y_integrated)

    interpolated = scipy.interpolate.interp1d(x, y_integrated, kind='linear')

    fig = pl.figure()
    ax = fig.add_subplot(1, 1, 1)
    ax.plot(x, y_integrated)
    ax.set_xlabel('Driftzeit / ns')
    ax.set_ylabel('Distanz / mm')
    ax.set_title(title)
    ax.grid(True)
    ax.margins(0.05)

    fig.tight_layout()
    fig.savefig(outfile)

    return interpolated


def time_le_histograms(events_lists, labels, title, outfile):
    fig = pl.figure()

    ax = fig.add_subplot(1, 1, 1)
    for events, label in zip(events_lists, labels):
        time_le_hist_into_axes(events, ax, label)

    ax.set_xlabel('Driftzeit / ns')
    ax.set_ylabel('Anzahl Events')
    ax.set_title(title)
    ax.grid(True)
    ax.margins(0.05)
    ax.legend(loc='best')

    fig.tight_layout()
    fig.savefig(outfile)


def time_le_histogram(events, title, outfile):
    fig = pl.figure()

    ax = fig.add_subplot(1, 1, 1)
    time_le_hist_into_axes_2(events, ax)

    ax.set_xlabel('Driftzeit / ns')
    ax.set_ylabel('Anzahl Events')
    ax.set_title(title)
    ax.grid(True)
    ax.margins(0.05)
    ax.legend(loc='best')

    fig.tight_layout()
    fig.savefig(outfile)


def time_le_vs_wire_le(events, outfile, title):
    pl.clf()
    x = []
    y = []

    for event in events:
        wire_le = event[0]
        time_le = event[1]

        x += wire_le
        y += time_le

    #ax.plot(x, np.array(y) * 2.5, linestyle='none', marker='.', alpha=0.3)
    pl.hist2d(x, np.array(y) * 2.5, bins=(bins(x), bins(y)/2), norm=matplotlib.colors.LogNorm())

    pl.colorbar()
    pl.xlabel('Drahtnummer')
    pl.ylabel('Driftzeit / ns')
    pl.title(title)
    pl.grid(True)
    pl.margins(0.05)

    pl.tight_layout()
    pl.savefig(outfile)

    pl.clf()

def tot_vs_time_le(events, outfile, title):
    pl.clf()
    x = []
    y = []

    for event in events:
        tot = event[2]
        time_le = event[1]

        x += time_le
        y += tot

    #ax.plot(x, np.array(y) * 2.5, linestyle='none', marker='.', alpha=0.3)
    pl.hist2d(np.array(x) * 2.5, np.array(y), bins=(bins(x), bins(y)/2), norm=matplotlib.colors.LogNorm())

    pl.colorbar()
    pl.xlabel('Driftzeit / ns')
    pl.ylabel('Time over Threshold')
    pl.title(title)
    pl.grid(True)
    pl.margins(0.05)

    pl.tight_layout()
    pl.savefig(outfile)

    pl.clf()

def wire_correlation(events, outfile, title):
    pl.clf()
    x = []
    y = []

    for event in events:
        wire_le = event[0]

        if len(wire_le) < 2:
            continue

        for w1 in wire_le:
            for w2 in wire_le:
                if w1 == w2:
                    continue


                x.append(w1)
                y.append(w2)

    #ax.plot(x, np.array(y) * 2.5, linestyle='none', marker='.', alpha=0.3)
    pl.hist2d(np.array(x), np.array(y), bins=(bins(x), bins(y)), norm=matplotlib.colors.LogNorm())

    pl.colorbar()
    pl.xlabel('Wire ID')
    pl.ylabel('Wire ID')
    pl.title(title)
    pl.grid(True)
    pl.margins(0.05)

    pl.tight_layout()
    pl.savefig(outfile)

    pl.clf()


def summe_differenz(events, odb, outfile, title):
    pl.clf()
    x = []
    y = []

    for event in events:
        time_le = event[1]

        if len(time_le) < 2:
            continue

        for i in range(len(time_le)):
            for j in range(len(time_le)):
                if i == j:
                    continue

                t1 = time_le[i]
                t2 = time_le[j]

                #if t1 == 0 or t2 == 0:
                #    continue

                d1 = odb(t1 * 2.5)
                d2 = odb(t2 * 2.5)


                x.append(d1-d2)
                y.append(d1+d2)

    #ax.plot(x, np.array(y) * 2.5, linestyle='none', marker='.', alpha=0.3)
    pl.hist2d(np.array(x), np.array(y), bins=(80, 80))#, norm=matplotlib.colors.LogNorm())

    pl.colorbar()
    pl.xlabel('Abstand / mm')
    pl.ylabel('Abstand / mm')
    pl.title(title)
    pl.grid(True)
    pl.margins(0.05)

    pl.tight_layout()
    pl.savefig(outfile)

    pl.clf()

def winkelverteilung():
    events = load_data("Daten/m03.01_run_151027_134606.root.js") 
    all_wire_le = []
    for event in events:
        wire_le = event[0]
        all_wire_le += wire_le
    hits, kanten = np.histogram(all_wire_le, bins=bins(all_wire_le))
    kanten = kanten[:-1]
    i_max = np.argmax(hits)
    mitte_draht = kanten[i_max]
    rel_draht = kanten - mitte_draht
    draht_abstand = rel_draht * 8.5
    winkel = np.degrees(np.arctan2(draht_abstand, 123.5))

    fig = pl.figure()
    ax = fig.add_subplot(1, 1, 1)
    ax.plot(winkel, hits)
    ax.set_title("Winkelverteilung")
    ax.set_xlabel("Winkel [Grad]")
    ax.set_ylabel("Anzahl Ereignisse")
    ax.margins(0.05)
    ax.grid(True)
    fig.tight_layout()
    fig.savefig("hits-winkel.pdf")

def test_keys(T):
    '''
    Testet das dict auf Schlüssel mit Bindestrichen.
    '''
    dash_keys = []
    for key in T:
        if '-' in key:
            dash_keys.append(key)

    if len(dash_keys) > 0:
        print()
        print('**************************************************************')
        print('* Es dürfen keine Bindestriche in den Schlüsseln für T sein! *')
        print('**************************************************************')
        print()
        print('Folgende Schlüssel enthalten Bindestriche:')
        for dash_key in dash_keys:
            print('-', dash_key)
        print()
        sys.exit(100)


